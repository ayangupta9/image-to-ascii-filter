<style>
    .toast-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
</style>

<div class="toast" data-autohide="true" animate="true" delay="300" id=<%=toastId%>>
    <div class="toast-header">
        <strong class="mr-auto"><i class="fa fa-grav"></i>
            <%= headerMsg%>
        </strong>
        <button type="button" id="closeBtn" class="ml-2 mb-1 close btn" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        <%= bodyMsg%>
    </div>
</div>